/**index.wxss**/
.nav-search image{
  margin-left: 10px;
}

.user-icon image, .nav-search image{
  width: 25px; height: 25px;
  margin-top: 13px;
}
.navtop{
  display: flex;
  height: 51px;
  flex-direction: row;
}
.navtop .user-icon{
  width: 40px;
}
.scroll-x{
  border-bottom: 1rpx solid #f0f0f0;
}
.nav-box{
  display: flex;
  flex-direction: row;
  overflow-x: scroll;
}
.scroll-box{
  width: calc(100% - 80px);
  overflow: hidden;
  white-space: nowrap;
}
.scroll-x .flex-item{
margin:0 10px;
height:50px;
line-height:50px;
color: #000;
font-weight: 400;
font-size: 1.25rem;
display: inline-block;
}
.scroll-x .active{
  border-bottom: 4px solid #6dbdf8;
  height: 46px;
  color: #6dbdf8;
}
.nav-search{
  width: 39px;
  height: 50px;
  border-left: 1px solid #f0f0f0;
}
.nav-search::before{
  content: '';
  height: 30px;
  display: inline-block;
  margin-top: 10px;
  box-shadow: -1px 0 1px #f0f0f0;
  border-left: 1pt solid #f0f0f0;
}
